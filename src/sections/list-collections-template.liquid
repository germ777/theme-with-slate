{% paginate collection.products by 12 %}

<div class="collection-section" data-section-id="{{ section.id }}" data-section-type="collection-template">

  <div class="wrapper">
    {% include 'breadcrumb' %}
  </div>

  <header class="hide" role="banner">
    <h1>{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="rte">
        {{ collection.description }}
      </div>
    {% endif %}
  </header>

  <div class="wrapper">
    <div class="grid">
      <div class="grid__item large-up--one-quarter">
        {% include 'collection-sidebar' %}
      </div>

      <div class="grid__item large-up--three-quarters">
        {% include 'collection-sorting' %}

        <div class="grid grid--uniform">
          {% for product in collection.products %}
            <div class="grid__item medium-up--one-third">
              {% include 'product-grid-item' %}
            </div>
          {% else %}
            {% if collection.handle == 'all' and collection.all_vendors.size == 0 and collection.all_types.size == 0 %}
              {% for i in (1..6) %}
                <div class="grid__item">
                  <div class="product-card">
                    <a href="#">
                      {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                      {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg placeholder-svg--small' }}

                      <p class="product-card__title">
                        {{ 'homepage.onboarding.product_title' | t }}
                      </p>
                    </a>

                    <p class="product-card__price">{{ 1999 | money }}</p>
                  </div>
                </div>
              {% endfor %}
            {% else %}
              <div class="grid__item">
                <p>{{ 'collections.general.no_matches' | t }}</p>
              </div>
            {% endif %}

          {% endfor %}
        </div>
        {% if paginate.pages > 1 %}
          {% include 'pagination' %}
        {% endif %}
      </div>
    </div>
  </div>

</div>

{% endpaginate %}

{% schema %}
  {
    "name": "Collection",
    "settings": [
      {
        "type": "link_list",
        "id": "sidebar_linklist",
        "label": "Menu",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "tag_filtering",
        "label": "Enable tag filtering",
        "default": true
      },
      {
        "type": "text",
        "id": "tags_list",
        "label": "Tags list",
        "info": "Separated by a comma. Example: Small,Medium,Large"
      }
    ]
  }
{% endschema %}
